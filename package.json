{
	"name": "vscode-viewfile-intellisense",
	"displayName": "ViewFile intellisense",
	"description": "Language server for the viewfile php composer package",
	"author": "Anders Pedersen",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/genius257/vscode-viewfile-intellisense"
	},
	"publisher": "genius257",
	"categories": [],
	"keywords": [
		"viewfile"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:php"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "ViewFile extension configuration",
			"properties": {
				"viewfileLanguageServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"php.executablePath": {
					"description": "Points to the PHP executable.",
					"type": [
						"string",
						"null"
					],
					"default": null,
					"scope": "application"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^8.2.2",
		"@types/node": "^12.12.0",
		"@typescript-eslint/eslint-plugin": "^4.23.0",
		"@typescript-eslint/parser": "^4.23.0",
		"eslint": "^7.26.0",
		"mocha": "^8.3.2",
		"typescript": "^4.3.5",
		"vsce": "^1.100.1"
	},
	"dependencies": {}
}
